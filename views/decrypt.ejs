<%- include("partials/header") %>

<h3>Decrypt your image</h3>
<div class="row">
	<form action="/dec" method="POST" enctype="multipart/form-data">
		Sender's username: <input type="text" name="sender" required><br>
		Your username: <input type="text" name="reciever" required><br>
		Enter the key: <input type="text" name="key" required><br><br>
		<input type="file" name="myImage" required><br><br>
		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="material-icons right">cloud_upload</i>
		</button>
	</form>
</div>

<h2><%= typeof msg != 'undefined' ? msg:"" %></h2>

<% if((typeof messageShow!='undefined') && messageShow.length!=0){ %>
	<p>The decrypted message is: <div class="show-message"><%= messageShow %></div> </p>
	<p class="unreadable-msg">If the message is unreadable, recheck the key and also the uploaded message</p>
<% } %>

<%- include("partials/footer") %>

