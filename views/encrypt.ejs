<%- include("partials/header") %>
<h3>Upload image to encrypt</h3>

<div class="row">
	<form action="/enc" method="POST" enctype="multipart/form-data">
		Your username: <input type="text" name="sender" required><br>
		Reciever: <input type="text" name="reciever" required><br>
		Message: <input type="text" name="message" required><br><br>
		<input type="file" name="myImage" required><br><br>
		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="material-icons right">cloud_upload</i>
		</button>
	</form>
    
</div>


<h4><%= typeof msg != 'undefined' ? msg:"" %></h4>

<% if(typeof(downloadReady) != 'undefined'){ %>
	<h5>Not down the key for decryption: <%=d%></h5>	
	<h5><a href="/download">Download the encrypted image</a></h5>
<%}%>

